extends ../layout

block content
  h3.text-center 用户信息修改
  br
  .container
    .row
      if user && user.name
        .alert.alert-warning.hidden(id='addTips' role='alert') 警告内容
        form.form-horizontal(name="userform" id="userform" method="POST" action="/admin/user/update")
          .form-group.hidden
            input(type="text" name="id" value="#{user.id}")
          .form-group
            label.col-md-2.control-label 姓名
            .col-md-8
              input(type="text" id="name" name="name" value="#{user.name}").form-control
          .form-group
            label.col-md-2.control-label 年龄
            .col-md-8
              input(type="text" name="age" value="#{user.age}").form-control
          .form-group
            label.col-md-2.control-label 职业
            .col-md-8
              input(type="text" name="job" value="#{user.job}").form-control
          .form-group
            label.col-md-2.control-label 爱好
            .col-md-8
              input(type="text" name="hobby" value="#{user.hobby}").form-control
          
          .form-group
            label.col-md-2.control-label 密码
            .col-md-8
              input(type="password" id="pas" name="pas" value="").form-control
          .form-group
            label.col-md-2.control-label 确认密码
            .col-md-8
              input(type="password" id="confirmPas" name="confirmPas" value="").form-control

          .form-group
            label.col-md-2.control-label 更新时间
            .col-md-8
              if user.meta.updateAt
                - var updateDate = user.meta.updateAt
                - var _update_str = updateDate.getFullYear() + '/' + (updateDate.getMonth() + 1) + '/' + updateDate.getDate();
              .form-control #{_update_str}

          .form-group
            .col-md-1.col-md-offset-2
              button(type="button" id='commitBtn').btn.btn-primary 提交添加
              button.hidden(type="submit" id='subBtn').btn.btn-primary 提交添加
            .col-md-2
              a(href="/admin/users").btn.btn-primary 返回
      else
        .alert.alert-warning 查询用户信息出错

  //导入用户处理脚本
  script(src="/javascripts/users.js")