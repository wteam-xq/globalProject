extends tkd_layout

block content
  // 不兼容浏览器显示效果
  #noCanvasTips.container.noCanvasTips
    .alert.alert-danger
      strong 您正在使用低版本浏览器，
      |  本页面无法显示,
      |       建议您升级到
      a(href='http://www.google.cn/intl/zh-CN/chrome/', target='_blank') Chrome
      |       或以下浏览器：
      a(href='http://www.mozilla.org/en-US/firefox', target='_blank') Firefox
      |  /
      a(href='http://www.apple.com.cn/safari/', target='_blank') Safari
      |  /
      a(href='http://www.opera.com/', target='_blank') Opera
      |  /
      a(href='http://windows.microsoft.com/en-us/internet-explorer/download-ie', target='_blank')
        | Internet Explorer 10
    .tkd-thumbnail
      img(src='/images/404.jpg', alt='404')
  // 主页面
  #mainmenu.mainmenu.main-panel
    // 选项卡菜单
    .tkd-navbar
      .navbar.navbar-default.row(role='navigation')
        .navbar-header.col-xs-5.col-md-3.col-lg-3.pull-left
          a#to-person-info.navbar-brand.logo-brand(href='##')
            img.logo(src='/images/logo.png', alt='logo')
        form.navbar-form.navbar-right.col-xs-7.col-md-9.col-lg-9.row(role='search')
          .form-group.pull-left.col-xs-12.col-md-12.col-lg-12
            span.glyphicon.glyphicon-search.tkd-search
            input.form-control.pull-right.input-search(data-parentid='mainmenu', type='text', placeholder='搜索卡牌、攻略、规则')
      .menu-nav.row
        ul.nav.nav-tabs(role='tablist')
          li#menu-rule.active.col-xs-3.col-md-3
            a(href='#rule', data-toggle='tab') 规则
          li#menu-card.col-xs-3.col-md-3
            a(href='#card', data-toggle='tab') 游戏牌
          li#menu-heros.col-xs-3.col-md-3
            a(href='#heros', data-toggle='tab') 武将
          li#menu-str.col-xs-3.col-md-3
            a(href='#strategy', data-toggle='tab') 攻略
    // 选项卡内容
    .tab-content
      #rule.list-group.tab-pane.fade.in.active.rule.item-list(role='tabpanel')
        | 规则内容
      #card.tab-pane.fade.item-list
        | 卡牌内容
      #heros.tab-pane.fade.item-list
        | 武将内容
      #strategy.tab-pane.fade.item-list
        | 攻略内容
  // 应用个人信息添加
  #person-info.tkd-navbar.person-info
    .navbar.navbar-default.row(role='navigation')
      .navbar-header.col-xs-5.col-md-3.pull-left
        a.navbar-brand.logo-brand(href='##')
          span#back-index.glyphicon.glyphicon-chevron-left.back-ico(data-btntype='cancel')
      form.navbar-form.navbar-right.col-xs-7.col-md-4.row(role='search')
        .form-group.pull-left.col-xs-12
          span.glyphicon.glyphicon-search.tkd-search
          input.form-control.pull-right.input-search(type='text', data-parentid='person-info', placeholder='搜索卡牌、攻略、规则')
    .panel.panel-warning
      .panel-heading 三国杀FAQ   应用信息
      ul.list-group
        li.list-group-item
          strong 作者:  
          span wteam-xq
        li.list-group-item
          strong 邮箱:  
          span 857609086@qq.com
        li.list-group-item
          strong QQ:  
          span 857609086
        li.list-group-item
          strong 博客:  
          a(href='http://www.cnblogs.com/wteam-xq/') http://www.cnblogs.com/wteam-xq/
        li.list-group-item
          strong github:  
          a(href='https://github.com/wteam-xq')  https://github.com/wteam-xq
  // 搜索页面
  #search-info.tkd-navbar.search-info.main-panel
    .navbar.navbar-default.row(role='navigation')
      .form-group.col-xs-9.col-md-9.pull-left
        span.glyphicon.glyphicon-search.search-ico
        input.form-control.pull-right(type='text', placeholder='搜索卡牌、攻略、规则')
        button.close.search-close.hidden(type='button')
          span(aria-hidden='true') ×
          span.sr-only Close
      #back-index.col-xs-2.col-md-2.search-cancel.pull-right(data-btntype='cancel')
        | 取消
      #search-submit.col-xs-2.col-md-2.search-submit.pull-right(data-btntype='cancel')
        | 搜索
    .panel.panel-warning.search-list
      .search-tips
        | 搜索内容展示区
  // 卡牌类型metro展示
  #card-types.tkd-navbar.card-types.sub-page.main-panel
    .panel.panel-warning 卡牌类型
  // 规则详情页
  #rule-detail.tkd-navbar.rule-detail
    .panel.panel-warning 规则详情页
  // 卡牌详情页
  #sub-card-detail.tkd-navbar.card-detail
    .panel.panel-warning 卡牌详情页
  // 武将详情页
  #heros-detail.tkd-navbar.heros-detail
    .panel.panel-warning 武将详情页
  // 攻略详情页
  #strategy-detail.tkd-navbar.card-detail
    .panel.panel-warning 攻略详情页
  // 搜索结果详情页
  #search-rule-detail.tkd-navbar.rule-detail.search-detail
    .panel.panel-warning 规则详情页
  #search-sub-card-detail.tkd-navbar.card-detail.search-detail
    .panel.panel-warning 卡牌详情页
  #search-heros-detail.tkd-navbar.heros-detail.search-detail
    .panel.panel-warning 武将详情页
  #search-strategy-detail.tkd-navbar.card-detail.search-detail
    .panel.panel-warning 攻略详情页
  // 置顶小按钮
  #backtotop
    .bttbg
  // 二维码小按钮 只有PC可见
  #rightDocker.hidden-xs.hidden-sm.hidden-md
    button#rightDockerBtn.btn.btn-default
      i.glyphicon.glyphicon-qrcode
    #dockerPopover.popover.fade.left.no-arrow.docker-show
      .arrow
      .popover-content.docker-right
        table.table.table-borderless
          tbody
            tr
              td
                .heading
                  i.icon-mobile-phone.glyphicon.glyphicon-phone
                  |  移动访问
                img(src='/images/two_dimension.png', width='200', height='200')

